<header>
    <a href={{path('welcome')}}>{{ 'nav.back' |trans }}</a>
</header>
<h1>{{ 'titles.list' |trans({},'posts') }}</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>{{ 'properties.id' |trans({}, 'posts') }}</th>
            <th>{{ 'properties.title' |trans({}, 'posts') }}</th>
            <th>{{ 'properties.slug' |trans({}, 'posts') }}</th>
            <th>{{ 'properties.content' |trans({}, 'posts') }}</th>
            <th>{{ 'properties.date' |trans({}, 'posts') }}</th>
            <th>{{ 'properties.actions' |trans({}, 'posts') }}</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('post_admin_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.title }}</td>
            <td>{{ entity.slug }}</td>
            <td>{{ entity.content }}</td>
            <td>{% if entity.date %}{{ entity.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('post_admin_show', { 'id': entity.id }) }}"> {{ 'crud.show' |trans }}</a>
                    </li>
                    <li>
                        <a href="{{ path('post_admin_edit', { 'id': entity.id }) }}"> {{ 'crud.edit' |trans }}</a>
                    </li>
                    <li>
                        <a href="{{ path('post_admin_delete', { 'id': entity.id }) }}"> {{ 'crud.delete' |trans }}</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('post_admin_new') }}"> {{ 'crud.create' |trans }}</a>
    </li>
</ul>
